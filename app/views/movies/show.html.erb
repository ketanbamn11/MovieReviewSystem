<p class="alert alert-success"><%= notice %></p>

<%= render @movie %>

<div class="mb-3">
  <%= link_to "Edit this movie", edit_movie_path(@movie), class: "btn btn-warning" %> |
  <%= link_to "Back to movies", movies_path, class: "btn btn-secondary" %>

  <%= button_to "Destroy this movie", @movie, method: :delete, class: "btn btn-danger", data: { confirm: 'Are you sure?' } %>
</div>

<p class="alert alert-success"><%= notice %></p>

<h1 class="display-4">Actors and Film locations</h1>

<div class="container">
  <div class="row">
    <% @movie.locations.each do |location| %>
      <div class="col-md-4 mb-4">
        <div class="card">
          <div class="card-body">
            <%= render location %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="mt-4">
  <h3 class="mb-3">Create Film Location</h3>
  <%= render partial: 'locations/form', locals: { location: @movie.locations.build } %>
</div>
